# TeachProxy 环境变量配置 - 压力测试专用
# ============================================================
# 数据库配置 (SQLite)
# ============================================================
DATABASE_URL=sqlite+aiosqlite:///./teachproxy.db

# ============================================================
# Mock 提供商配置 (压力测试专用)
# ============================================================
TEACHPROXY_MOCK_PROVIDER=true

# ============================================================
# 限流配置 (高并发测试)
# ============================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=10000
RATE_LIMIT_BURST_SIZE=1000

# ============================================================
# 缓存配置
# ============================================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
REDIS_ENABLED=false

# ============================================================
# 安全配置
# ============================================================
ADMIN_TOKEN=stress-test-admin-token

# ============================================================
# 日志配置
# ============================================================
LOG_LEVEL=WARNING

# ============================================================
# HTTP 客户端配置
# ============================================================
HTTPX_TIMEOUT=60.0
HTTPX_CONNECT_TIMEOUT=10.0
HTTPX_READ_TIMEOUT=60.0
HTTPX_MAX_CONNECTIONS=100
HTTPX_MAX_KEEPALIVE_CONNECTIONS=20

# ============================================================
# 请求路由配置
# ============================================================
REQUEST_ROUTER_ENABLED=true
REQUEST_ROUTER_STREAMING_LIMIT=50
REQUEST_ROUTER_NORMAL_LIMIT=200
REQUEST_ROUTER_TIMEOUT=5.0

# ============================================================
# API Key 加密
# ============================================================
API_KEY_ENCRYPTION_KEY=stress-test-encryption-key-32bytes
